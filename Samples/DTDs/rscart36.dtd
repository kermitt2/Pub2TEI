<!ELEMENT tfnotes       %no-omission; (tfnote)+           >
<!ELEMENT tfnote        %no-omission; (row+|p+)           >
**** GONE ****
-->

<!-- header/footer model changed to full CALS form: -->
<!ENTITY % tbl.hdft.mdl                "(colspec*,row+)">

